[Unit]
Description=TV Remote Control Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/tv-remote-control/pi-server
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
ExecStart=/home/pi/tv-remote-control/pi-server/venv/bin/python server.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target