<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dark_gray">

    <!-- 连接区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etServerIp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_server_ip"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_connect"
            android:textSize="18sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 状态显示 -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_disconnected"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- 浏览器控制 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnOpenBrowser"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/btn_open"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCloseBrowser"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/btn_close"
            android:textSize="18sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 方向键控制 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- 上 -->
        <Button
            android:id="@+id/btnUp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/btn_up"
            android:textSize="36sp"
            android:layout_marginBottom="8dp" />

        <!-- 左-确认-右 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/btn_left"
                android:textSize="36sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/btn_enter"
                android:textSize="16sp"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btnRight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/btn_right"
                android:textSize="36sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 下 -->
        <Button
            android:id="@+id/btnDown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/btn_down"
            android:textSize="36sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 返回按钮 -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_back"
        android:textSize="20sp"
        android:layout_marginBottom="24dp" />

    <!-- 文本输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etInputText"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:hint="@string/hint_input_text"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnSendText"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/btn_send_text"
            android:textSize="18sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>